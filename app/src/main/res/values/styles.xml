<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="TitleTextView">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BodyTextView">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StatusTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="ToolbarStyle">
        <item name="titleTextColor">@color/white</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="StatusView">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>